{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["tsx", "src/index.ts"],
            "cwd": "${workspaceFolder}/packages/server",

            "skipFiles": ["<node_internals>/**"],
            "envFile": "${workspaceFolder}/packages/server/.env",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        }
    ]
}
